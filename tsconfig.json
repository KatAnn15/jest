{
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "outDir": "./dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "typeRoots": ["node_modules/@types", "src/modules.d.ts"],
        "baseUrl": ".",
        "declaration": true,
        "emitDeclarationOnly": true,
        "isolatedModules": true,
        "jsx": "react",
        "paths": {
            "@test-utils": ["./Tests/test-utils"]
        }
    },
    "include": ["src", "modules.d.ts"],    
}